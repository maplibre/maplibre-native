{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "module": "nodenext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "maxNodeModuleJsDepth": 0,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    ".github/scripts/*.ts",
    "scripts/**/*.mjs",
    "scripts/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
