<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- these are public -->
    <declare-styleable name="maplibre_MapView" >

        <!--DEPRECATED use maplibre_apiBaseUri instead -->
        <attr name="maplibre_apiBaseUrl" format="string"/>

        <!--Configuration-->
        <attr name="maplibre_apiBaseUri" format="string"/>
        <attr name="maplibre_localIdeographEnabled" format="boolean"/>
        <attr name="maplibre_localIdeographFontFamily" format="string"/>
        <attr name="maplibre_localIdeographFontFamilies" format="reference"/>
        <attr name="maplibre_cross_source_collisions" format="boolean"/>

        <!--Action Journal-->
        <attr name="maplibre_actionJournalEnabled" format="boolean"/>
        <attr name="maplibre_actionJournalLogFileSize" format="integer"/>
        <attr name="maplibre_actionJournalLogFileCount" format="integer"/>
        <attr name="maplibre_actionJournalRenderingReportInterval" format="integer"/>

        <!--Camera-->
        <attr name="maplibre_cameraTargetLat" format="float"/>
        <attr name="maplibre_cameraTargetLng" format="float"/>
        <attr name="maplibre_cameraZoom" format="float"/>
        <attr name="maplibre_cameraBearing" format="float"/>
        <attr name="maplibre_cameraTilt" format="float"/>
        <attr name="maplibre_cameraCancelTransition" format="boolean"/>

        <!--Zoom-->
        <attr name="maplibre_cameraZoomMax" format="float"/>
        <attr name="maplibre_cameraZoomMin" format="float"/>

        <!--Pitch-->
        <attr name="maplibre_cameraPitchMax" format="float"/>
        <attr name="maplibre_cameraPitchMin" format="float"/>

        <!--Gestures-->
        <attr name="maplibre_uiZoomGestures" format="boolean"/>
        <attr name="maplibre_uiScrollGestures" format="boolean"/>
        <attr name="maplibre_uiHorizontalScrollGestures" format="boolean"/>
        <attr name="maplibre_uiRotateGestures" format="boolean"/>
        <attr name="maplibre_uiTiltGestures" format="boolean"/>
        <attr name="maplibre_uiDoubleTapGestures" format="boolean"/>
        <attr name="maplibre_uiQuickZoomGestures" format="boolean"/>

        <!--Compass-->
        <attr name="maplibre_uiCompass" format="boolean"/>
        <attr name="maplibre_uiCompassGravity">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="center_vertical" value="0x10"/>
            <flag name="fill_vertical" value="0x70"/>
            <flag name="center_horizontal" value="0x01"/>
            <flag name="fill_horizontal" value="0x07"/>
            <flag name="center" value="0x11"/>
            <flag name="fill" value="0x77"/>
            <flag name="clip_vertical" value="0x80"/>
            <flag name="clip_horizontal" value="0x08"/>
            <flag name="start" value="0x00800003"/>
            <flag name="end" value="0x00800005"/>
        </attr>
        <attr name="maplibre_uiCompassMarginLeft" format="dimension"/>
        <attr name="maplibre_uiCompassMarginTop" format="dimension"/>
        <attr name="maplibre_uiCompassMarginRight" format="dimension"/>
        <attr name="maplibre_uiCompassMarginBottom" format="dimension"/>
        <attr name="maplibre_uiCompassFadeFacingNorth" format="boolean"/>
        <attr name="maplibre_uiCompassDrawable" format="reference"/>

        <!--Logo-->
        <attr name="maplibre_uiLogo" format="boolean"/>
        <attr name="maplibre_uiLogoGravity">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="center_vertical" value="0x10"/>
            <flag name="fill_vertical" value="0x70"/>
            <flag name="center_horizontal" value="0x01"/>
            <flag name="fill_horizontal" value="0x07"/>
            <flag name="center" value="0x11"/>
            <flag name="fill" value="0x77"/>
            <flag name="clip_vertical" value="0x80"/>
            <flag name="clip_horizontal" value="0x08"/>
            <flag name="start" value="0x00800003"/>
            <flag name="end" value="0x00800005"/>
        </attr>
        <attr name="maplibre_uiLogoMarginLeft" format="dimension"/>
        <attr name="maplibre_uiLogoMarginTop" format="dimension"/>
        <attr name="maplibre_uiLogoMarginRight" format="dimension"/>
        <attr name="maplibre_uiLogoMarginBottom" format="dimension"/>

        <!--Attribution-->
        <attr name="maplibre_uiAttribution" format="boolean"/>
        <attr name="maplibre_uiAttributionGravity">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="center_vertical" value="0x10"/>
            <flag name="fill_vertical" value="0x70"/>
            <flag name="center_horizontal" value="0x01"/>
            <flag name="fill_horizontal" value="0x07"/>
            <flag name="center" value="0x11"/>
            <flag name="fill" value="0x77"/>
            <flag name="clip_vertical" value="0x80"/>
            <flag name="clip_horizontal" value="0x08"/>
            <flag name="start" value="0x00800003"/>
            <flag name="end" value="0x00800005"/>
        </attr>
        <attr name="maplibre_uiAttributionMarginLeft" format="dimension"/>
        <attr name="maplibre_uiAttributionMarginTop" format="dimension"/>
        <attr name="maplibre_uiAttributionMarginRight" format="dimension"/>
        <attr name="maplibre_uiAttributionMarginBottom" format="dimension"/>
        <attr name="maplibre_uiAttributionTintColor" format="color"/>

        <!-- Use TextureView-->
        <attr name="maplibre_renderTextureMode" format="boolean"/>
        <attr name="maplibre_renderTextureTranslucentSurface" format="boolean"/>
        <attr name="maplibre_foregroundLoadColor" format="color"/>

        <attr name="maplibre_enableTilePrefetch" format="boolean"/>
        <attr name="maplibre_prefetchZoomDelta" format="integer"/>
        <attr name="maplibre_enableZMediaOverlay" format="boolean"/>
        <attr name="maplibre_pixelRatio" format="float"/>

    </declare-styleable>

    <declare-styleable name="maplibre_BubbleLayout">
        <attr name="maplibre_bl_arrowWidth" format="dimension|reference"/>
        <attr name="maplibre_bl_cornersRadius" format="dimension|reference"/>
        <attr name="maplibre_bl_arrowHeight" format="dimension|reference"/>
        <attr name="maplibre_bl_arrowPosition" format="dimension|reference"/>
        <attr name="maplibre_bl_bubbleColor" format="color|reference"/>
        <attr name="maplibre_bl_strokeWidth" format="dimension|reference"/>
        <attr name="maplibre_bl_strokeColor" format="color|reference"/>

        <attr name="maplibre_bl_arrowDirection" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="top" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="maplibre_LocationComponent">
        <attr name="maplibre_foregroundDrawable" format="reference"/>
        <attr name="maplibre_foregroundTintColor" format="color"/>
        <attr name="maplibre_backgroundDrawable" format="reference"/>
        <attr name="maplibre_backgroundTintColor" format="color"/>
        <attr name="maplibre_bearingDrawable" format="reference"/>
        <attr name="maplibre_bearingTintColor" format="color"/>
        <attr name="maplibre_gpsDrawable" format="reference"/>

        <attr name="maplibre_foregroundDrawableStale" format="reference"/>
        <attr name="maplibre_foregroundStaleTintColor" format="color"/>
        <attr name="maplibre_backgroundDrawableStale" format="reference"/>
        <attr name="maplibre_backgroundStaleTintColor" format="color"/>

        <attr name="maplibre_accuracyAlpha" format="float"/>
        <attr name="maplibre_accuracyColor" format="color"/>

        <attr name="maplibre_elevation" format="dimension"/>

        <!-- Stale state -->
        <attr name="maplibre_enableStaleState" format="boolean"/>
        <attr name="maplibre_staleStateTimeout" format="integer" min="0"/>

        <!-- Location icon padding -->
        <attr name="maplibre_iconPaddingLeft" format="integer"/>
        <attr name="maplibre_iconPaddingTop" format="integer"/>
        <attr name="maplibre_iconPaddingRight" format="integer"/>
        <attr name="maplibre_iconPaddingBottom" format="integer"/>

        <!-- Map layer configuration -->
        <attr name="maplibre_layer_above" format="string"/>
        <attr name="maplibre_layer_below" format="string"/>

        <!-- Icon scale based on map zoom levels -->
        <attr name="maplibre_maxZoomIconScale" format="float"/>
        <attr name="maplibre_minZoomIconScale" format="float"/>

        <!-- Camera tracking settings -->
        <attr name="maplibre_trackingGesturesManagement" format="boolean"/>
        <attr name="maplibre_trackingInitialMoveThreshold" format="dimension"/>
        <attr name="maplibre_trackingMultiFingerMoveThreshold" format="dimension"/>

        <!-- Animation duration multiplier -->
        <attr name="maplibre_trackingAnimationDurationMultiplier" format="float" />

        <!-- Compass animation -->
        <attr name="maplibre_compassAnimationEnabled" format="boolean" />

        <!-- Accuracy animation-->
        <attr name="maplibre_accuracyAnimationEnabled" format="boolean" />

        <!-- Pulsing circle -->
        <attr name="maplibre_pulsingLocationCircleEnabled" format="boolean" />
        <attr name="maplibre_pulsingLocationCircleFadeEnabled" format="boolean" />
        <attr name="maplibre_pulsingLocationCircleColor" format="color" />
        <attr name="maplibre_pulsingLocationCircleDuration" format="float" />
        <attr name="maplibre_pulsingLocationCircleRadius" format="float" />
        <attr name="maplibre_pulsingLocationCircleAlpha" format="float" />
        <attr name="maplibre_pulsingLocationCircleInterpolator" format="string" />

        <!-- Camera Animation -->
        <attr name="maplibre_concurrentCameraAnimation" format="boolean" />

    </declare-styleable>
</resources>
