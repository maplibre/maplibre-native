Content":[{"type":"text","text":"Your app must specify a value for "},{"code":"NSLocationWhenInUseUsageDescription","type":"codeVoice"},{"type":"text","text":" or"},{"type":"text","text":" "},{"code":"NSLocationAlwaysUsageDescription","type":"codeVoice"},{"type":"text","text":" in its "},{"code":"Info.plist","type":"codeVoice"},{"type":"text","text":" to satisfy the"},{"type":"text","text":" "},{"type":"text","text":"requirements of the underlying Core Location framework when enabling this"},{"type":"text","text":" "},{"type":"text","text":"property."}],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"If you implement a custom location manager, set the "},{"type":"codeVoice","code":"locationManager"},{"type":"text","text":" before"},{"type":"text","text":" "},{"type":"text","text":"calling "},{"type":"codeVoice","code":"showsUserLocation"},{"type":"text","text":"."}],"type":"paragraph"}]}],"variants":[{"traits":[{"interfaceLanguage":"occ"}],"paths":["\/documentation\/maplibre\/mlnmapview\/showsuserlocation"]}],"abstract":[{"text":"A Boolean value indicating whether the map may display the user location.","type":"text"}],"schemaVersion":{"patch":0,"minor":3,"major":0},"kind":"symbol","sections":[],"metadata":{"title":"showsUserLocation","externalID":"c:objc(cs)MLNMapView(py)showsUserLocation","modules":[{"name":"MapLibre"}],"navigatorTitle":[{"kind":"identifier","text":"showsUserLocation"}],"symbolKind":"property","role":"symbol","fragments":[{"text":"showsUserLocation","kind":"identifier"}],"remoteSource":{"url":"https:\/\/github.com\/maplibre\/maplibre-native\/blob\/main\/platform\/ios\/src\/MLNMapView.h#L590","fileName":"MLNMapView.h"},"roleHeading":"Instance Property"},"references":{"doc://org.swift.MyProject/documentation/MapLibre/MLNMapView":{"url":"\/documentation\/maplibre\/mlnmapview","kind":"symbol","type":"topic","fragments":[{"text":"MLNMapView","kind":"identifier"}],"title":"MLNMapView","abstract":[{"text":"An interactive, customizable map vi