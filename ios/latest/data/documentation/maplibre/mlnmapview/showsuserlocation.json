ageDescription"},{"type":"text","text":" or"},{"type":"text","text":" "},{"type":"codeVoice","code":"NSLocationAlwaysUsageDescription"},{"type":"text","text":" in its "},{"type":"codeVoice","code":"Info.plist"},{"type":"text","text":" to satisfy the"},{"type":"text","text":" "},{"text":"requirements of the underlying Core Location framework when enabling this","type":"text"},{"type":"text","text":" "},{"text":"property.","type":"text"}],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"If you implement a custom location manager, set the "},{"code":"locationManager","type":"codeVoice"},{"text":" before","type":"text"},{"type":"text","text":" "},{"type":"text","text":"calling "},{"code":"showsUserLocation","type":"codeVoice"},{"text":".","type":"text"}],"type":"paragraph"}]}],"abstract":[{"text":"A Boolean value indicating whether the map may display the user location.","type":"text"}],"schemaVersion":{"major":0,"minor":3,"patch":0},"kind":"symbol","metadata":{"role":"symbol","fragments":[{"kind":"identifier","text":"showsUserLocation"}],"title":"showsUserLocation","roleHeading":"Instance Property","navigatorTitle":[{"text":"showsUserLocation","kind":"identifier"}],"symbolKind":"property","externalID":"c:objc(cs)MLNMapView(py)showsUserLocation","modules":[{"name":"MapLibre"}]},"variants":[{"paths":["\/documentation\/maplibre\/mlnmapview\/showsuserlocation"],"traits":[{"interfaceLanguage":"occ"}]}],"identifier":{"url":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView\/showsUserLocation","interfaceLanguage":"occ"},"references":{"doc://org.swift.MyProject/documentation/MapLibre":{"title":"MapLibre","abstract":[{"type":"text","text":"Powerful, free and open-source mapping toolkit with full control over data sources and styling."}],"url":"\/documentation\/maplibre","kind":"symbol","role":"collection","type":"topic","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre"},"doc://org.swift.MyProject/documentation/MapLibre/MLNMapView":{"