n"},{"text":" in its ","type":"text"},{"type":"codeVoice","code":"Info.plist"},{"text":" to satisfy the","type":"text"},{"text":" ","type":"text"},{"text":"requirements of the underlying Core Location framework when enabling this","type":"text"},{"text":" ","type":"text"},{"text":"property.","type":"text"}],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"If you implement a custom location manager, set the "},{"code":"locationManager","type":"codeVoice"},{"type":"text","text":" before"},{"type":"text","text":" "},{"type":"text","text":"calling "},{"code":"showsUserLocation","type":"codeVoice"},{"type":"text","text":"."}],"type":"paragraph"}]}],"identifier":{"interfaceLanguage":"occ","url":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView\/showsUserLocation"},"hierarchy":{"paths":[["doc:\/\/org.swift.MyProject\/documentation\/MapLibre","doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView"]]},"schemaVersion":{"major":0,"minor":3,"patch":0},"metadata":{"externalID":"c:objc(cs)MLNMapView(py)showsUserLocation","role":"symbol","modules":[{"name":"MapLibre"}],"roleHeading":"Instance Property","remoteSource":{"fileName":"MLNMapView.h","url":"https:\/\/github.com\/maplibre\/maplibre-native\/blob\/main\/platform\/ios\/src\/MLNMapView.h#L551"},"fragments":[{"text":"showsUserLocation","kind":"identifier"}],"title":"showsUserLocation","navigatorTitle":[{"kind":"identifier","text":"showsUserLocation"}],"symbolKind":"property"},"variants":[{"traits":[{"interfaceLanguage":"occ"}],"paths":["\/documentation\/maplibre\/mlnmapview\/showsuserlocation"]}],"abstract":[{"text":"A Boolean value indicating whether the map may display the user location.","type":"text"}],"references":{"doc://org.swift.MyProject/documentation/MapLibre":{"url":"\/documentation\/maplibre","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre","role":"collection","title":"MapLibre","kind":"symbol","abstract":[{"type":"text","text":"Powerful, free and open-sourc