oice"},{"type":"text","text":" or"},{"type":"text","text":" "},{"code":"NSLocationAlwaysUsageDescription","type":"codeVoice"},{"type":"text","text":" in its "},{"code":"Info.plist","type":"codeVoice"},{"type":"text","text":" to satisfy the"},{"type":"text","text":" "},{"type":"text","text":"requirements of the underlying Core Location framework when enabling this"},{"type":"text","text":" "},{"text":"property.","type":"text"}]},{"type":"paragraph","inlineContent":[{"type":"text","text":"If you implement a custom location manager, set the "},{"code":"locationManager","type":"codeVoice"},{"type":"text","text":" before"},{"type":"text","text":" "},{"type":"text","text":"calling "},{"code":"showsUserLocation","type":"codeVoice"},{"type":"text","text":"."}]}]}],"variants":[{"paths":["\/documentation\/maplibre\/mlnmapview\/showsuserlocation"],"traits":[{"interfaceLanguage":"occ"}]}],"kind":"symbol","sections":[],"schemaVersion":{"minor":3,"major":0,"patch":0},"abstract":[{"type":"text","text":"A Boolean value indicating whether the map may display the user location."}],"hierarchy":{"paths":[["doc:\/\/org.swift.MyProject\/documentation\/MapLibre","doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView"]]},"metadata":{"roleHeading":"Instance Property","title":"showsUserLocation","fragments":[{"text":"showsUserLocation","kind":"identifier"}],"remoteSource":{"fileName":"MLNMapView.h","url":"https:\/\/github.com\/maplibre\/maplibre-native\/blob\/main\/platform\/ios\/src\/MLNMapView.h#L590"},"modules":[{"name":"MapLibre"}],"role":"symbol","symbolKind":"property","externalID":"c:objc(cs)MLNMapView(py)showsUserLocation","navigatorTitle":[{"kind":"identifier","text":"showsUserLocation"}]},"references":{"doc://org.swift.MyProject/documentation/MapLibre/MLNMapView/showsUserLocation":{"fragments":[{"kind":"identifier","text":"showsUserLocation"}],"role":"symbol","kind":"symbol","type":"topic","title":"showsUserLocation","url":"\/documentation\/maplibre\/mlnmapview\/showsuse