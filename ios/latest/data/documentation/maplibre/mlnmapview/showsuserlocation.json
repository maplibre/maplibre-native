ce"},{"type":"text","text":" or"},{"type":"text","text":" "},{"code":"NSLocationAlwaysUsageDescription","type":"codeVoice"},{"type":"text","text":" in its "},{"code":"Info.plist","type":"codeVoice"},{"text":" to satisfy the","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"requirements of the underlying Core Location framework when enabling this"},{"type":"text","text":" "},{"type":"text","text":"property."}]},{"inlineContent":[{"text":"If you implement a custom location manager, set the ","type":"text"},{"type":"codeVoice","code":"locationManager"},{"text":" before","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"calling "},{"code":"showsUserLocation","type":"codeVoice"},{"text":".","type":"text"}],"type":"paragraph"}],"kind":"content"}],"sections":[],"abstract":[{"text":"A Boolean value indicating whether the map may display the user location.","type":"text"}],"variants":[{"paths":["\/documentation\/maplibre\/mlnmapview\/showsuserlocation"],"traits":[{"interfaceLanguage":"occ"}]}],"kind":"symbol","metadata":{"externalID":"c:objc(cs)MLNMapView(py)showsUserLocation","symbolKind":"property","roleHeading":"Instance Property","title":"showsUserLocation","fragments":[{"kind":"identifier","text":"showsUserLocation"}],"role":"symbol","navigatorTitle":[{"kind":"identifier","text":"showsUserLocation"}],"modules":[{"name":"MapLibre"}]},"schemaVersion":{"major":0,"minor":3,"patch":0},"identifier":{"url":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView\/showsUserLocation","interfaceLanguage":"occ"},"references":{"doc://org.swift.MyProject/documentation/MapLibre":{"title":"MapLibre","abstract":[{"text":"Powerful, free and open-source mapping toolkit with full control over data sources and styling.","type":"text"}],"kind":"symbol","type":"topic","role":"collection","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre","url":"\/documentation\/maplibre"},"doc://org.swift.MyProject/documentation/MapLibre/MLNMapView/sho