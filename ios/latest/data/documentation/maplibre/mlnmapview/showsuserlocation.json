":"text"},{"type":"codeVoice","code":"Info.plist"},{"type":"text","text":" to satisfy the"},{"text":" ","type":"text"},{"type":"text","text":"requirements of the underlying Core Location framework when enabling this"},{"text":" ","type":"text"},{"type":"text","text":"property."}]},{"type":"paragraph","inlineContent":[{"type":"text","text":"If you implement a custom location manager, set the "},{"type":"codeVoice","code":"locationManager"},{"text":" before","type":"text"},{"type":"text","text":" "},{"text":"calling ","type":"text"},{"type":"codeVoice","code":"showsUserLocation"},{"type":"text","text":"."}]}],"kind":"content"}],"kind":"symbol","identifier":{"interfaceLanguage":"occ","url":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView\/showsUserLocation"},"variants":[{"traits":[{"interfaceLanguage":"occ"}],"paths":["\/documentation\/maplibre\/mlnmapview\/showsuserlocation"]}],"sections":[],"schemaVersion":{"patch":0,"major":0,"minor":3},"hierarchy":{"paths":[["doc:\/\/org.swift.MyProject\/documentation\/MapLibre","doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView"]]},"abstract":[{"text":"A Boolean value indicating whether the map may display the user location.","type":"text"}],"metadata":{"symbolKind":"property","title":"showsUserLocation","role":"symbol","fragments":[{"kind":"identifier","text":"showsUserLocation"}],"externalID":"c:objc(cs)MLNMapView(py)showsUserLocation","navigatorTitle":[{"kind":"identifier","text":"showsUserLocation"}],"modules":[{"name":"MapLibre"}],"roleHeading":"Instance Property"},"references":{"doc://org.swift.MyProject/documentation/MapLibre":{"abstract":[{"text":"Powerful, free and open-source mapping toolkit with full control over data sources and styling.","type":"text"}],"type":"topic","role":"collection","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre","kind":"symbol","url":"\/documentation\/maplibre","title":"MapLibre"},"doc://org.swift.MyProject/documentation/MapLibre/MLNMapView":{"