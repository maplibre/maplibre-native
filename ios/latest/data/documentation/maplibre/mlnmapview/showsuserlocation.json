xt":", the"},{"type":"text","text":" "},{"type":"text","text":"map view continues to track the user’s location and update it periodically."}],"type":"paragraph"},{"inlineContent":[{"text":"This property does not indicate whether the user’s position is actually visible","type":"text"},{"text":" ","type":"text"},{"text":"on the map, only whether the map view is allowed to display it. To determine","type":"text"},{"text":" ","type":"text"},{"text":"whether the user’s position is visible, use the ","type":"text"},{"type":"codeVoice","code":"userLocationVisible"},{"text":" property.","type":"text"},{"text":" ","type":"text"},{"text":"The default value of this property is ","type":"text"},{"type":"codeVoice","code":"NO"},{"text":".","type":"text"}],"type":"paragraph"},{"inlineContent":[{"text":"Your app must specify a value for ","type":"text"},{"type":"codeVoice","code":"NSLocationWhenInUseUsageDescription"},{"text":" or","type":"text"},{"text":" ","type":"text"},{"type":"codeVoice","code":"NSLocationAlwaysUsageDescription"},{"text":" in its ","type":"text"},{"type":"codeVoice","code":"Info.plist"},{"text":" to satisfy the","type":"text"},{"text":" ","type":"text"},{"text":"requirements of the underlying Core Location framework when enabling this","type":"text"},{"text":" ","type":"text"},{"text":"property.","type":"text"}],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"If you implement a custom location manager, set the "},{"code":"locationManager","type":"codeVoice"},{"type":"text","text":" before"},{"type":"text","text":" "},{"type":"text","text":"calling "},{"code":"showsUserLocation","type":"codeVoice"},{"type":"text","text":"."}],"type":"paragraph"}],"kind":"content"}],"references":{"doc://org.swift.MyProject/documentation/MapLibre":{"type":"topic","role":"collection","kind":"symbol","title":"MapLibre","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre","url":"\/documentation\/maplibre","abstract":[{"type":"text","text":"Powerful, free