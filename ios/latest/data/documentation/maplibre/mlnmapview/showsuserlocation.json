 determine","type":"text"},{"type":"text","text":" "},{"text":"whether the user’s position is visible, use the ","type":"text"},{"type":"codeVoice","code":"userLocationVisible"},{"text":" property.","type":"text"},{"type":"text","text":" "},{"type":"text","text":"The default value of this property is "},{"code":"NO","type":"codeVoice"},{"type":"text","text":"."}]},{"inlineContent":[{"type":"text","text":"Your app must specify a value for "},{"code":"NSLocationWhenInUseUsageDescription","type":"codeVoice"},{"type":"text","text":" or"},{"type":"text","text":" "},{"code":"NSLocationAlwaysUsageDescription","type":"codeVoice"},{"type":"text","text":" in its "},{"code":"Info.plist","type":"codeVoice"},{"type":"text","text":" to satisfy the"},{"text":" ","type":"text"},{"type":"text","text":"requirements of the underlying Core Location framework when enabling this"},{"type":"text","text":" "},{"type":"text","text":"property."}],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"If you implement a custom location manager, set the "},{"code":"locationManager","type":"codeVoice"},{"text":" before","type":"text"},{"type":"text","text":" "},{"type":"text","text":"calling "},{"type":"codeVoice","code":"showsUserLocation"},{"text":".","type":"text"}],"type":"paragraph"}],"kind":"content"}],"variants":[{"traits":[{"interfaceLanguage":"occ"}],"paths":["\/documentation\/maplibre\/mlnmapview\/showsuserlocation"]}],"identifier":{"url":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView\/showsUserLocation","interfaceLanguage":"occ"},"references":{"doc://org.swift.MyProject/documentation/MapLibre":{"kind":"symbol","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre","abstract":[{"type":"text","text":"Powerful, free and open-source mapping toolkit with full control over data sources and styling."}],"title":"MapLibre","role":"collection","type":"topic","url":"\/documentation\/maplibre"},"doc://org.swift.MyProject/documentation/MapLibre/MLNMapView":{"