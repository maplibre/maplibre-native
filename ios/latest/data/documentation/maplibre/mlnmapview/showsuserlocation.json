":"text"},{"code":"Info.plist","type":"codeVoice"},{"type":"text","text":" to satisfy the"},{"text":" ","type":"text"},{"text":"requirements of the underlying Core Location framework when enabling this","type":"text"},{"type":"text","text":" "},{"type":"text","text":"property."}]},{"type":"paragraph","inlineContent":[{"type":"text","text":"If you implement a custom location manager, set the "},{"code":"locationManager","type":"codeVoice"},{"text":" before","type":"text"},{"text":" ","type":"text"},{"text":"calling ","type":"text"},{"code":"showsUserLocation","type":"codeVoice"},{"type":"text","text":"."}]}],"kind":"content"}],"metadata":{"externalID":"c:objc(cs)MLNMapView(py)showsUserLocation","modules":[{"name":"MapLibre"}],"navigatorTitle":[{"text":"showsUserLocation","kind":"identifier"}],"fragments":[{"text":"showsUserLocation","kind":"identifier"}],"role":"symbol","title":"showsUserLocation","symbolKind":"property","roleHeading":"Instance Property"},"sections":[],"variants":[{"paths":["\/documentation\/maplibre\/mlnmapview\/showsuserlocation"],"traits":[{"interfaceLanguage":"occ"}]}],"kind":"symbol","hierarchy":{"paths":[["doc:\/\/org.swift.MyProject\/documentation\/MapLibre","doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView"]]},"schemaVersion":{"major":0,"minor":3,"patch":0},"abstract":[{"type":"text","text":"A Boolean value indicating whether the map may display the user location."}],"identifier":{"interfaceLanguage":"occ","url":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView\/showsUserLocation"},"references":{"doc://org.swift.MyProject/documentation/MapLibre/MLNMapView/showsUserLocation":{"type":"topic","abstract":[{"type":"text","text":"A Boolean value indicating whether the map may display the user location."}],"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView\/showsUserLocation","kind":"symbol","fragments":[{"kind":"identifier","text":"showsUserLocation"}],"title":"showsUserLocation","role":"s