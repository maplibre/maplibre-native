":" or"},{"type":"text","text":" "},{"code":"NSLocationAlwaysUsageDescription","type":"codeVoice"},{"type":"text","text":" in its "},{"code":"Info.plist","type":"codeVoice"},{"type":"text","text":" to satisfy the"},{"type":"text","text":" "},{"type":"text","text":"requirements of the underlying Core Location framework when enabling this"},{"type":"text","text":" "},{"type":"text","text":"property."}]},{"type":"paragraph","inlineContent":[{"type":"text","text":"If you implement a custom location manager, set the "},{"code":"locationManager","type":"codeVoice"},{"type":"text","text":" before"},{"type":"text","text":" "},{"type":"text","text":"calling "},{"code":"showsUserLocation","type":"codeVoice"},{"type":"text","text":"."}]}],"kind":"content"}],"hierarchy":{"paths":[["doc:\/\/org.swift.MyProject\/documentation\/MapLibre","doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView"]]},"metadata":{"navigatorTitle":[{"kind":"identifier","text":"showsUserLocation"}],"fragments":[{"kind":"identifier","text":"showsUserLocation"}],"remoteSource":{"url":"https:\/\/github.com\/maplibre\/maplibre-native\/blob\/main\/platform\/ios\/src\/MLNMapView.h#L551","fileName":"MLNMapView.h"},"roleHeading":"Instance Property","modules":[{"name":"MapLibre"}],"symbolKind":"property","title":"showsUserLocation","externalID":"c:objc(cs)MLNMapView(py)showsUserLocation","role":"symbol"},"abstract":[{"type":"text","text":"A Boolean value indicating whether the map may display the user location."}],"schemaVersion":{"major":0,"minor":3,"patch":0},"kind":"symbol","sections":[],"identifier":{"url":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView\/showsUserLocation","interfaceLanguage":"occ"},"references":{"doc://org.swift.MyProject/documentation/MapLibre":{"type":"topic","url":"\/documentation\/maplibre","title":"MapLibre","kind":"symbol","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre","abstract":[{"type":"text","text":"Powerful, free and open-source map