on"},{"type":"text","text":" in its "},{"type":"codeVoice","code":"Info.plist"},{"type":"text","text":" to satisfy the"},{"type":"text","text":" "},{"type":"text","text":"requirements of the underlying Core Location framework when enabling this"},{"type":"text","text":" "},{"text":"property.","type":"text"}],"type":"paragraph"},{"inlineContent":[{"text":"If you implement a custom location manager, set the ","type":"text"},{"code":"locationManager","type":"codeVoice"},{"text":" before","type":"text"},{"text":" ","type":"text"},{"text":"calling ","type":"text"},{"code":"showsUserLocation","type":"codeVoice"},{"text":".","type":"text"}],"type":"paragraph"}],"kind":"content"}],"kind":"symbol","sections":[],"abstract":[{"text":"A Boolean value indicating whether the map may display the user location.","type":"text"}],"metadata":{"role":"symbol","fragments":[{"text":"showsUserLocation","kind":"identifier"}],"roleHeading":"Instance Property","symbolKind":"property","modules":[{"name":"MapLibre"}],"remoteSource":{"url":"https:\/\/github.com\/maplibre\/maplibre-native\/blob\/main\/platform\/ios\/src\/MLNMapView.h#L590","fileName":"MLNMapView.h"},"navigatorTitle":[{"text":"showsUserLocation","kind":"identifier"}],"externalID":"c:objc(cs)MLNMapView(py)showsUserLocation","title":"showsUserLocation"},"identifier":{"interfaceLanguage":"occ","url":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView\/showsUserLocation"},"variants":[{"paths":["\/documentation\/maplibre\/mlnmapview\/showsuserlocation"],"traits":[{"interfaceLanguage":"occ"}]}],"hierarchy":{"paths":[["doc:\/\/org.swift.MyProject\/documentation\/MapLibre","doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView"]]},"references":{"doc://org.swift.MyProject/documentation/MapLibre/MLNMapView/showsUserLocation":{"type":"topic","url":"\/documentation\/maplibre\/mlnmapview\/showsuserlocation","role":"symbol","title":"showsUserLocation","abstract":[{"type":"text","text":"A Boolean value indicating whethe