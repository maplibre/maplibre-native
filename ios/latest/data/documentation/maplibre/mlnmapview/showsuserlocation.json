":"paragraph"},{"inlineContent":[{"type":"text","text":"This property does not indicate whether the user’s position is actually visible"},{"type":"text","text":" "},{"type":"text","text":"on the map, only whether the map view is allowed to display it. To determine"},{"type":"text","text":" "},{"type":"text","text":"whether the user’s position is visible, use the "},{"type":"codeVoice","code":"userLocationVisible"},{"type":"text","text":" property."},{"type":"text","text":" "},{"type":"text","text":"The default value of this property is "},{"type":"codeVoice","code":"NO"},{"type":"text","text":"."}],"type":"paragraph"},{"inlineContent":[{"text":"Your app must specify a value for ","type":"text"},{"code":"NSLocationWhenInUseUsageDescription","type":"codeVoice"},{"text":" or","type":"text"},{"text":" ","type":"text"},{"code":"NSLocationAlwaysUsageDescription","type":"codeVoice"},{"text":" in its ","type":"text"},{"code":"Info.plist","type":"codeVoice"},{"text":" to satisfy the","type":"text"},{"text":" ","type":"text"},{"text":"requirements of the underlying Core Location framework when enabling this","type":"text"},{"text":" ","type":"text"},{"text":"property.","type":"text"}],"type":"paragraph"},{"inlineContent":[{"text":"If you implement a custom location manager, set the ","type":"text"},{"type":"codeVoice","code":"locationManager"},{"text":" before","type":"text"},{"text":" ","type":"text"},{"text":"calling ","type":"text"},{"type":"codeVoice","code":"showsUserLocation"},{"text":".","type":"text"}],"type":"paragraph"}],"kind":"content"}],"identifier":{"interfaceLanguage":"occ","url":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView\/showsUserLocation"},"sections":[],"references":{"doc://org.swift.MyProject/documentation/MapLibre/MLNMapView/showsUserLocation":{"title":"showsUserLocation","fragments":[{"text":"showsUserLocation","kind":"identifier"}],"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView\/showsUserLocation","t