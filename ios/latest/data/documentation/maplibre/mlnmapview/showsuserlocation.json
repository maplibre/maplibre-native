lwaysUsageDescription"},{"type":"text","text":" in its "},{"code":"Info.plist","type":"codeVoice"},{"text":" to satisfy the","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"requirements of the underlying Core Location framework when enabling this"},{"type":"text","text":" "},{"text":"property.","type":"text"}]},{"inlineContent":[{"type":"text","text":"If you implement a custom location manager, set the "},{"type":"codeVoice","code":"locationManager"},{"text":" before","type":"text"},{"type":"text","text":" "},{"type":"text","text":"calling "},{"type":"codeVoice","code":"showsUserLocation"},{"text":".","type":"text"}],"type":"paragraph"}],"kind":"content"}],"metadata":{"navigatorTitle":[{"text":"showsUserLocation","kind":"identifier"}],"title":"showsUserLocation","roleHeading":"Instance Property","role":"symbol","fragments":[{"kind":"identifier","text":"showsUserLocation"}],"externalID":"c:objc(cs)MLNMapView(py)showsUserLocation","symbolKind":"property","modules":[{"name":"MapLibre"}]},"hierarchy":{"paths":[["doc:\/\/org.swift.MyProject\/documentation\/MapLibre","doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView"]]},"abstract":[{"type":"text","text":"A Boolean value indicating whether the map may display the user location."}],"identifier":{"url":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView\/showsUserLocation","interfaceLanguage":"occ"},"sections":[],"kind":"symbol","variants":[{"paths":["\/documentation\/maplibre\/mlnmapview\/showsuserlocation"],"traits":[{"interfaceLanguage":"occ"}]}],"references":{"doc://org.swift.MyProject/documentation/MapLibre/MLNMapView/showsUserLocation":{"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView\/showsUserLocation","kind":"symbol","type":"topic","role":"symbol","title":"showsUserLocation","fragments":[{"kind":"identifier","text":"showsUserLocation"}],"abstract":[{"type":"text","text":"A Boolean value indicating whether the map may display the user locati