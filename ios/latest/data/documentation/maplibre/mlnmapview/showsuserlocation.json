r "},{"type":"codeVoice","code":"NSLocationWhenInUseUsageDescription"},{"type":"text","text":" or"},{"type":"text","text":" "},{"type":"codeVoice","code":"NSLocationAlwaysUsageDescription"},{"type":"text","text":" in its "},{"type":"codeVoice","code":"Info.plist"},{"type":"text","text":" to satisfy the"},{"type":"text","text":" "},{"type":"text","text":"requirements of the underlying Core Location framework when enabling this"},{"type":"text","text":" "},{"type":"text","text":"property."}]},{"type":"paragraph","inlineContent":[{"text":"If you implement a custom location manager, set the ","type":"text"},{"type":"codeVoice","code":"locationManager"},{"text":" before","type":"text"},{"text":" ","type":"text"},{"text":"calling ","type":"text"},{"type":"codeVoice","code":"showsUserLocation"},{"text":".","type":"text"}]}]}],"hierarchy":{"paths":[["doc:\/\/org.swift.MyProject\/documentation\/MapLibre","doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView"]]},"abstract":[{"type":"text","text":"A Boolean value indicating whether the map may display the user location."}],"variants":[{"paths":["\/documentation\/maplibre\/mlnmapview\/showsuserlocation"],"traits":[{"interfaceLanguage":"occ"}]}],"metadata":{"title":"showsUserLocation","symbolKind":"property","navigatorTitle":[{"kind":"identifier","text":"showsUserLocation"}],"roleHeading":"Instance Property","remoteSource":{"fileName":"MLNMapView.h","url":"https:\/\/github.com\/maplibre\/maplibre-native\/blob\/main\/platform\/ios\/src\/MLNMapView.h#L551"},"externalID":"c:objc(cs)MLNMapView(py)showsUserLocation","modules":[{"name":"MapLibre"}],"fragments":[{"kind":"identifier","text":"showsUserLocation"}],"role":"symbol"},"sections":[],"references":{"doc://org.swift.MyProject/documentation/MapLibre":{"kind":"symbol","abstract":[{"text":"Powerful, free and open-source mapping toolkit with full control over data sources and styling.","type":"text"}],"role":"collection","type":"topic","title":"MapLibre","url":"\/document