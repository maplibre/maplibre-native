ionView"},"doc://org.swift.MyProject/documentation/MapLibre/MLNAnnotationView/rotatesToMatchCamera":{"kind":"symbol","url":"\/documentation\/maplibre\/mlnannotationview\/rotatestomatchcamera","role":"symbol","type":"topic","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationView\/rotatesToMatchCamera","fragments":[{"kind":"identifier","text":"rotatesToMatchCamera"}],"abstract":[{"text":"A Boolean value that determines whether the annotation view rotates together","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"with the map."}],"title":"rotatesToMatchCamera"},"doc://org.swift.MyProject/documentation/MapLibre/MLNAnnotationImage":{"url":"\/documentation\/maplibre\/mlnannotationimage","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationImage","type":"topic","abstract":[{"text":"The ","type":"text"},{"isActive":true,"type":"reference","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationImage"},{"type":"text","text":" class is responsible for presenting point-based"},{"type":"text","text":" "},{"type":"text","text":"annotations visually on a map view. Annotation image objects wrap "},{"code":"UIImage","type":"codeVoice"},{"type":"text","text":" "},{"type":"text","text":"objects and may be recycled later and put into a reuse queue that is maintained"},{"type":"text","text":" "},{"text":"by the map view.","type":"text"}],"fragments":[{"kind":"identifier","text":"MLNAnnotationImage"}],"title":"MLNAnnotationImage","kind":"symbol","role":"symbol"}}}