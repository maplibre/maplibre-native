{"kind":"symbol","primaryContentSections":[{"kind":"declarations","declarations":[{"languages":["occ"],"platforms":["iOS"],"tokens":[{"text":"@property","kind":"keyword"},{"kind":"text","text":" ("},{"kind":"keyword","text":"nonatomic"},{"kind":"text","text":", "},{"text":"assign","kind":"keyword"},{"text":") ","kind":"text"},{"text":"BOOL","kind":"typeIdentifier","preciseIdentifier":"c:@T@BOOL"},{"kind":"text","text":" "},{"text":"rotatesToMatchCamera","kind":"identifier"},{"text":";","kind":"text"}]}]},{"kind":"content","content":[{"level":2,"anchor":"discussion","type":"heading","text":"Discussion"},{"inlineContent":[{"text":"When the value of this property is ","type":"text"},{"code":"YES","type":"codeVoice"},{"type":"text","text":" and the map is rotated, the annotation"},{"text":" ","type":"text"},{"type":"text","text":"view rotates. This is also the behavior of "},{"isActive":true,"type":"reference","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationImage"},{"text":" objects. When the","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"value of this property is "},{"type":"codeVoice","code":"NO"},{"type":"text","text":" the annotation has its rotation angle fixed."}],"type":"paragraph"},{"type":"paragraph","inlineContent":[{"text":"The default value of this property is ","type":"text"},{"type":"codeVoice","code":"NO"},{"type":"text","text":". Set this property to "},{"code":"YES","type":"codeVoice"},{"type":"text","text":" if the"},{"type":"text","text":" "},{"text":"view’s rotation is important.","type":"text"}]}]}],"schemaVersion":{"major":0,"minor":3,"patch":0},"hierarchy":{"paths":[["doc:\/\/org.swift.MyProject\/documentation\/MapLibre","doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationView"]]},"abstract":[{"type":"text","text":"A Boolean value that determines whether the annotation view rotates together"},{"text":" ","type":"text"},{"type":"text","text":"with the map."}],"sections":[],"variant