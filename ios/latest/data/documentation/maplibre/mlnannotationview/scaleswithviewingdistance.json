ent":[{"inlineContent":[{"text":"Scaling many on-screen annotation views can contribute to poor map","type":"text"},{"text":" ","type":"text"},{"text":"performance. Consider keeping this property disabled if your use case","type":"text"},{"text":" ","type":"text"},{"text":"involves hundreds or thousands of annotation views.","type":"text"}],"type":"paragraph"}]}]}],"hierarchy":{"paths":[["doc:\/\/org.swift.MyProject\/documentation\/MapLibre","doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationView"]]},"identifier":{"url":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationView\/scalesWithViewingDistance","interfaceLanguage":"occ"},"schemaVersion":{"minor":3,"major":0,"patch":0},"kind":"symbol","variants":[{"traits":[{"interfaceLanguage":"occ"}],"paths":["\/documentation\/maplibre\/mlnannotationview\/scaleswithviewingdistance"]}],"sections":[],"abstract":[{"type":"text","text":"A Boolean value that determines whether the annotation view grows and shrinks"},{"type":"text","text":" "},{"type":"text","text":"as the distance between the viewpoint and the annotation view changes on a"},{"type":"text","text":" "},{"type":"text","text":"tilted map."}],"metadata":{"modules":[{"name":"MapLibre"}],"title":"scalesWithViewingDistance","fragments":[{"text":"scalesWithViewingDistance","kind":"identifier"}],"symbolKind":"property","roleHeading":"Instance Property","role":"symbol","remoteSource":{"fileName":"MLNAnnotationView.h","url":"https:\/\/github.com\/maplibre\/maplibre-native\/blob\/main\/platform\/ios\/src\/MLNAnnotationView.h#L180"},"externalID":"c:objc(cs)MLNAnnotationView(py)scalesWithViewingDistance","navigatorTitle":[{"kind":"identifier","text":"scalesWithViewingDistance"}]},"references":{"doc://org.swift.MyProject/documentation/MapLibre/MLNAnnotationImage":{"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationImage","url":"\/documentation\/maplibre\/mlnannotationimage","title":"MLNAnnotationImage","kind":"symb