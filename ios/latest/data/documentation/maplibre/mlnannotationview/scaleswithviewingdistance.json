ent":[{"inlineContent":[{"text":"Scaling many on-screen annotation views can contribute to poor map","type":"text"},{"type":"text","text":" "},{"text":"performance. Consider keeping this property disabled if your use case","type":"text"},{"type":"text","text":" "},{"type":"text","text":"involves hundreds or thousands of annotation views."}],"type":"paragraph"}]}]}],"identifier":{"interfaceLanguage":"occ","url":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationView\/scalesWithViewingDistance"},"sections":[],"schemaVersion":{"major":0,"minor":3,"patch":0},"variants":[{"paths":["\/documentation\/maplibre\/mlnannotationview\/scaleswithviewingdistance"],"traits":[{"interfaceLanguage":"occ"}]}],"hierarchy":{"paths":[["doc:\/\/org.swift.MyProject\/documentation\/MapLibre","doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationView"]]},"metadata":{"role":"symbol","fragments":[{"text":"scalesWithViewingDistance","kind":"identifier"}],"externalID":"c:objc(cs)MLNAnnotationView(py)scalesWithViewingDistance","title":"scalesWithViewingDistance","modules":[{"name":"MapLibre"}],"navigatorTitle":[{"text":"scalesWithViewingDistance","kind":"identifier"}],"symbolKind":"property","roleHeading":"Instance Property","remoteSource":{"url":"https:\/\/github.com\/maplibre\/maplibre-native\/blob\/main\/platform\/ios\/src\/MLNAnnotationView.h#L180","fileName":"MLNAnnotationView.h"}},"kind":"symbol","abstract":[{"text":"A Boolean value that determines whether the annotation view grows and shrinks","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"as the distance between the viewpoint and the annotation view changes on a"},{"text":" ","type":"text"},{"text":"tilted map.","type":"text"}],"references":{"doc://org.swift.MyProject/documentation/MapLibre/MLNAnnotation":{"role":"symbol","abstract":[{"type":"text","text":"The "},{"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotation","isActive":true,"type":"reference"},{"type":"t