{"sections":[],"variants":[{"paths":["\/documentation\/maplibre\/mlnannotationview\/scaleswithviewingdistance"],"traits":[{"interfaceLanguage":"occ"}]}],"hierarchy":{"paths":[["doc:\/\/org.swift.MyProject\/documentation\/MapLibre","doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationView"]]},"primaryContentSections":[{"declarations":[{"languages":["occ"],"tokens":[{"kind":"keyword","text":"@property"},{"kind":"text","text":" ("},{"kind":"keyword","text":"nonatomic"},{"kind":"text","text":", "},{"kind":"keyword","text":"assign"},{"kind":"text","text":") "},{"kind":"typeIdentifier","preciseIdentifier":"c:@T@BOOL","text":"BOOL"},{"kind":"text","text":" "},{"kind":"identifier","text":"scalesWithViewingDistance"},{"kind":"text","text":";"}],"platforms":["iOS"]}],"kind":"declarations"},{"content":[{"text":"Discussion","level":2,"type":"heading","anchor":"discussion"},{"inlineContent":[{"type":"text","text":"When the value of this property is "},{"code":"YES","type":"codeVoice"},{"type":"text","text":" and the map is tilted, the annotation"},{"type":"text","text":" "},{"type":"text","text":"view appears smaller if it is towards the top of the view (closer to the"},{"type":"text","text":" "},{"type":"text","text":"horizon) and larger if it is towards the bottom of the view (closer to the"},{"type":"text","text":" "},{"type":"text","text":"viewpoint). This is also the behavior of "},{"isActive":true,"type":"reference","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationImage"},{"type":"text","text":" objects. When the"},{"type":"text","text":" "},{"type":"text","text":"value of this property is "},{"type":"codeVoice","code":"NO"},{"type":"text","text":" or the map’s pitch is zero, the annotation view"},{"type":"text","text":" "},{"type":"text","text":"remains the same size regardless of its position on-screen."}],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"The default value of this property is "},{"type":"codeVoice","code":"NO"},{"type":"text","text":". Keep this property set to "},{"type":"codeVoice","code":"NO"},{"type":"text","text":" if"},{"type":"text","text":" "},{"type":"text","text":"the view’s legibility is important."}],"type":"paragraph"},{"content":[{"inlineContent":[{"text":"Scaling many on-screen annotation views can contribute to poor map","type":"text"},{"text":" ","type":"text"},{"text":"performance. Consider keeping this property disabled if your use case","type":"text"},{"text":" ","type":"text"},{"text":"involves hundreds or thousands of annotation views.","type":"text"}],"type":"paragraph"}],"name":"Note","type":"aside","style":"note"}],"kind":"content"}],"kind":"symbol","metadata":{"fragments":[{"kind":"identifier","text":"scalesWithViewingDistance"}],"externalID":"c:objc(cs)MLNAnnotationView(py)scalesWithViewingDistance","roleHeading":"Instance Property","modules":[{"name":"MapLibre"}],"navigatorTitle":[{"kind":"identifier","text":"scalesWithViewingDistance"}],"role":"symbol","remoteSource":{"fileName":"MLNAnnotationView.h","url":"https:\/\/github.com\/maplibre\/maplibre-native\/blob\/main\/platform\/ios\/src\/MLNAnnotationView.h#L180"},"title":"scalesWithViewingDistance","symbolKind":"property"},"schemaVersion":{"major":0,"patch":0,"minor":3},"abstract":[{"type":"text","text":"A Boolean value that determines whether the annotation view grows and shrinks"},{"type":"text","text":" "},{"type":"text","text":"as the distance between the viewpoint and the annotation view changes on a"},{"type":"text","text":" "},{"type":"text","text":"tilted map."}],"identifier":{"url":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationView\/scalesWithViewingDistance","interfaceLanguage":"occ"},"references":{"doc://org.swift.MyProject/documentation/MapLibre":{"title":"MapLibre","type":"topic","abstract":[{"text":"Powerful, free and open-source mapping toolkit with full control over data sources and styling.","type":"text"}],"kind":"symbol","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre","role":"collection","url":"\/documentation\/maplibre"},"doc://org.swift.MyProject/documentation/MapLibre/MLNAnnotationView":{"abstract":[{"text":"The ","type":"text"},{"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationView","isActive":true,"type":"reference"},{"text":" class is responsible for marking a point annotation","type":"text"},{"text":" ","type":"text"},{"text":"with a view. Annotation views represent an annotation object, which is an","type":"text"},{"text":" ","type":"text"},{"text":"object that corresponds to the ","type":"text"},{"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotation","isActive":true,"type":"reference"},{"text":" protocol. When an annotation’s","type":"text"},{"text":" ","type":"text"},{"text":"geographic coordinate is visible in the map view, the map view asks its","type":"text"},{"text":" ","type":"text"},{"text":"delegate to a corresponding annotation view. If an annotation view is created","type":"text"},{"text":" ","type":"text"},{"text":"with a reuse identifier, the map view may recycle the view when it goes","type":"text"},{"text":" ","type":"text"},{"text":"offscreen.","type":"text"}],"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationView","fragments":[{"text":"MLNAnnotationView","kind":"identifier"}],"type":"topic","url":"\/documentation\/maplibre\/mlnannotationview","role":"symbol","kind":"symbol","title":"MLNAnnotationView"},"doc://org.swift.MyProject/documentation/MapLibre/MLNAnnotation":{"kind":"symbol","fragments":[{"kind":"identifier","text":"MLNAnnotation"}],"role":"symbol","url":"\/documentation\/maplibre\/mlnannotation","type":"topic","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotation","abstract":[{"type":"text","text":"The "},{"isActive":true,"type":"reference","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotation"},{"type":"text","text":" protocol is used to provide annotation-related information"},{"type":"text","text":" "},{"type":"text","text":"to a map view. To use this protocol, you adopt it in any custom objects that"},{"type":"text","text":" "},{"type":"text","text":"store or represent annotation data. Each object then serves as the source of"},{"type":"text","text":" "},{"type":"text","text":"information about a single map annotation and provides critical information,"},{"type":"text","text":" "},{"type":"text","text":"such as the annotation’s location on the map. Annotation objects do not provide"},{"type":"text","text":" "},{"type":"text","text":"the visual representation of the annotation but typically coordinate (in"},{"type":"text","text":" "},{"type":"text","text":"conjunction with the map view’s delegate) the creation of an appropriate"},{"type":"text","text":" "},{"type":"text","text":"objects to handle the display."}],"title":"MLNAnnotation"},"doc://org.swift.MyProject/documentation/MapLibre/MLNAnnotationView/scalesWithViewingDistance":{"abstract":[{"type":"text","text":"A Boolean value that determines whether the annotation view grows and shrinks"},{"type":"text","text":" "},{"type":"text","text":"as the distance between the viewpoint and the annotation view changes on a"},{"type":"text","text":" "},{"type":"text","text":"tilted map."}],"kind":"symbol","url":"\/documentation\/maplibre\/mlnannotationview\/scaleswithviewingdistance","role":"symbol","type":"topic","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationView\/scalesWithViewingDistance","title":"scalesWithViewingDistance","fragments":[{"kind":"identifier","text":"scalesWithViewingDistance"}]},"doc://org.swift.MyProject/documentation/MapLibre/MLNAnnotationImage":{"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationImage","abstract":[{"text":"The ","type":"text"},{"isActive":true,"type":"reference","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationImage"},{"text":" class is responsible for presenting point-based","type":"text"},{"text":" ","type":"text"},{"text":"annotations visually on a map view. Annotation image objects wrap ","type":"text"},{"type":"codeVoice","code":"UIImage"},{"text":" ","type":"text"},{"text":"objects and may be recycled later and put into a reuse queue that is maintained","type":"text"},{"text":" ","type":"text"},{"text":"by the map view.","type":"text"}],"type":"topic","url":"\/documentation\/maplibre\/mlnannotationimage","role":"symbol","fragments":[{"kind":"identifier","text":"MLNAnnotationImage"}],"kind":"symbol","title":"MLNAnnotationImage"}}}