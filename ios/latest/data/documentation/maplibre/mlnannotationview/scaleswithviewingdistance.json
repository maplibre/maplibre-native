":"note","content":[{"inlineContent":[{"type":"text","text":"Scaling many on-screen annotation views can contribute to poor map"},{"text":" ","type":"text"},{"text":"performance. Consider keeping this property disabled if your use case","type":"text"},{"type":"text","text":" "},{"type":"text","text":"involves hundreds or thousands of annotation views."}],"type":"paragraph"}]}]}],"metadata":{"title":"scalesWithViewingDistance","remoteSource":{"fileName":"MLNAnnotationView.h","url":"https:\/\/github.com\/maplibre\/maplibre-native\/blob\/main\/platform\/ios\/src\/MLNAnnotationView.h#L180"},"symbolKind":"property","fragments":[{"text":"scalesWithViewingDistance","kind":"identifier"}],"modules":[{"name":"MapLibre"}],"navigatorTitle":[{"text":"scalesWithViewingDistance","kind":"identifier"}],"role":"symbol","roleHeading":"Instance Property","externalID":"c:objc(cs)MLNAnnotationView(py)scalesWithViewingDistance"},"variants":[{"paths":["\/documentation\/maplibre\/mlnannotationview\/scaleswithviewingdistance"],"traits":[{"interfaceLanguage":"occ"}]}],"schemaVersion":{"major":0,"minor":3,"patch":0},"identifier":{"interfaceLanguage":"occ","url":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationView\/scalesWithViewingDistance"},"kind":"symbol","hierarchy":{"paths":[["doc:\/\/org.swift.MyProject\/documentation\/MapLibre","doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationView"]]},"abstract":[{"type":"text","text":"A Boolean value that determines whether the annotation view grows and shrinks"},{"text":" ","type":"text"},{"type":"text","text":"as the distance between the viewpoint and the annotation view changes on a"},{"text":" ","type":"text"},{"text":"tilted map.","type":"text"}],"references":{"doc://org.swift.MyProject/documentation/MapLibre":{"role":"collection","type":"topic","abstract":[{"type":"text","text":"Powerful, free and open-source mapping toolkit with full control over data sources and styling."}],"url":"\/documentation\/maplibre"