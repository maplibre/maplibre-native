{"variants":[{"traits":[{"interfaceLanguage":"occ"}],"paths":["\/documentation\/maplibre\/mlnsymbolstylelayer\/textvariableanchoroffset"]}],"kind":"symbol","hierarchy":{"paths":[["doc:\/\/org.swift.MyProject\/documentation\/MapLibre","doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNSymbolStyleLayer"]]},"schemaVersion":{"patch":0,"major":0,"minor":3},"metadata":{"navigatorTitle":[{"text":"textVariableAnchorOffset","kind":"identifier"}],"title":"textVariableAnchorOffset","modules":[{"name":"MapLibre"}],"symbolKind":"property","role":"symbol","roleHeading":"Instance Property","externalID":"c:objc(cs)MLNSymbolStyleLayer(py)textVariableAnchorOffset","fragments":[{"kind":"identifier","text":"textVariableAnchorOffset"}]},"primaryContentSections":[{"declarations":[{"languages":["occ"],"platforms":["iOS"],"tokens":[{"text":"@property","kind":"keyword"},{"text":" (","kind":"text"},{"text":"nonatomic","kind":"keyword"},{"kind":"text","text":") "},{"text":"NSExpression","preciseIdentifier":"c:objc(cs)NSExpression","kind":"typeIdentifier"},{"text":" * ","kind":"text"},{"text":"textVariableAnchorOffset","kind":"identifier"},{"kind":"text","text":";"}]}],"kind":"declarations"},{"content":[{"level":2,"anchor":"discussion","text":"Discussion","type":"heading"},{"type":"paragraph","inlineContent":[{"type":"text","text":"The length of the array must be even, and must alternate between enum and"},{"text":" ","type":"text"},{"type":"text","text":"point entries. i.e., each anchor location must be accompanied by a point, and"},{"type":"text","text":" "},{"text":"that point defines the offset when the corresponding anchor location is used.","type":"text"},{"type":"text","text":" "},{"type":"text","text":"Positive offset values indicate right and down, while negative values indicate"},{"type":"text","text":" "},{"type":"text","text":"left and up. Anchor locations may repeat, allowing the renderer to try multiple"},{"type":"text","text":" "},{"type":"text","text":"offsets to try and place a label using the same anchor."}]},{"inlineContent":[{"text":"When present, this property takes precedence over ","type":"text"},{"type":"codeVoice","code":"textAnchor"},{"text":",","type":"text"},{"text":" ","type":"text"},{"type":"codeVoice","code":"textVariableAnchor"},{"type":"text","text":", "},{"type":"codeVoice","code":"textOffset"},{"text":", and ","type":"text"},{"type":"codeVoice","code":"textRadialOffset"},{"text":".","type":"text"}],"type":"paragraph"},{"type":"codeListing","syntax":"json","code":["{ \"text-variable-anchor-offset\": [\"top\", [0, 4], \"left\", [3,0], \"bottom\", [1,","1]] } "]},{"type":"paragraph","inlineContent":[{"text":"When the renderer chooses the ","type":"text"},{"type":"codeVoice","code":"top"},{"text":" anchor, ","type":"text"},{"code":"[0, 4]","type":"codeVoice"},{"type":"text","text":" will be used for"},{"text":" ","type":"text"},{"type":"codeVoice","code":"textOffset"},{"type":"text","text":"; the text will be shifted down by 4 ems."}]},{"inlineContent":[{"type":"text","text":"When the renderer chooses the "},{"code":"left","type":"codeVoice"},{"text":" anchor, ","type":"text"},{"code":"[3, 0]","type":"codeVoice"},{"text":" will be used for","type":"text"},{"type":"text","text":" "},{"type":"codeVoice","code":"textOffset"},{"text":"; the text will be shifted right by 3 ems.","type":"text"}],"type":"paragraph"},{"inlineContent":[{"text":"This property is only applied to the style if ","type":"text"},{"type":"codeVoice","code":"text"},{"text":" is non-","type":"text"},{"code":"nil","type":"codeVoice"},{"type":"text","text":", and"},{"type":"text","text":" "},{"code":"symbolPlacement","type":"codeVoice"},{"type":"text","text":" is set to an expression that evaluates to or"},{"type":"text","text":" "},{"type":"codeVoice","code":"MLNSymbolPlacementPoint"},{"type":"text","text":". Otherwise, it is ignored."}],"type":"paragraph"},{"inlineContent":[{"text":"You can set this property to an expression containing any of the following:","type":"text"}],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"Constant interleaved "},{"type":"codeVoice","code":"MLNTextAnchor"},{"text":" and ","type":"text"},{"type":"codeVoice","code":"CGVector"},{"type":"text","text":" array values"},{"text":" ","type":"text"},{"type":"text","text":"Predefined functions, including mathematical and string operators"},{"type":"text","text":" "},{"text":"Conditional expressions","type":"text"},{"type":"text","text":" "},{"text":"Variable assignments and references to assigned variables","type":"text"},{"type":"text","text":" "},{"text":"Interpolation and step functions applied to the ","type":"text"},{"code":"$zoomLevel","type":"codeVoice"},{"type":"text","text":" variable and\/or"},{"text":" ","type":"text"},{"text":"feature attributes","type":"text"}],"type":"paragraph"}],"kind":"content"}],"identifier":{"url":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNSymbolStyleLayer\/textVariableAnchorOffset","interfaceLanguage":"occ"},"sections":[],"abstract":[{"type":"text","text":"To increase the chance of placing high-priority labels on the map, you can"},{"type":"text","text":" "},{"text":"provide an array of ","type":"text"},{"type":"codeVoice","code":"textAnchor"},{"text":" locations, each paired with an offset value.","type":"text"},{"type":"text","text":" "},{"text":"The renderer will attempt to place the label at each location, in order, before","type":"text"},{"type":"text","text":" "},{"text":"moving on to the next location+offset. Use ","type":"text"},{"type":"codeVoice","code":"textJustify: auto"},{"text":" to choose","type":"text"},{"text":" ","type":"text"},{"text":"justification based on anchor position.","type":"text"}],"references":{"doc://org.swift.MyProject/documentation/MapLibre":{"abstract":[{"text":"Powerful, free and open-source mapping toolkit with full control over data sources and styling.","type":"text"}],"title":"MapLibre","kind":"symbol","role":"collection","url":"\/documentation\/maplibre","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre","type":"topic"},"doc://org.swift.MyProject/documentation/MapLibre/MLNSymbolStyleLayer":{"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNSymbolStyleLayer","kind":"symbol","url":"\/documentation\/maplibre\/mlnsymbolstylelayer","title":"MLNSymbolStyleLayer","type":"topic","role":"symbol","abstract":[{"type":"text","text":"An "},{"isActive":true,"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNSymbolStyleLayer","type":"reference"},{"text":" is a style layer that renders icon and text labels","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"at points or along lines on the map."}],"fragments":[{"kind":"identifier","text":"MLNSymbolStyleLayer"}]},"doc://org.swift.MyProject/documentation/MapLibre/MLNSymbolStyleLayer/textVariableAnchorOffset":{"title":"textVariableAnchorOffset","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNSymbolStyleLayer\/textVariableAnchorOffset","kind":"symbol","type":"topic","role":"symbol","fragments":[{"kind":"identifier","text":"textVariableAnchorOffset"}],"url":"\/documentation\/maplibre\/mlnsymbolstylelayer\/textvariableanchoroffset","abstract":[{"text":"To increase the chance of placing high-priority labels on the map, you can","type":"text"},{"type":"text","text":" "},{"text":"provide an array of ","type":"text"},{"code":"textAnchor","type":"codeVoice"},{"type":"text","text":" locations, each paired with an offset value."},{"text":" ","type":"text"},{"text":"The renderer will attempt to place the label at each location, in order, before","type":"text"},{"type":"text","text":" "},{"text":"moving on to the next location+offset. Use ","type":"text"},{"type":"codeVoice","code":"textJustify: auto"},{"text":" to choose","type":"text"},{"type":"text","text":" "},{"text":"justification based on anchor position.","type":"text"}]}}}