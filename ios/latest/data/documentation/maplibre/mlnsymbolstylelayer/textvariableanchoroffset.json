riables"},{"text":" ","type":"text"},{"text":"Interpolation and step functions applied to the ","type":"text"},{"type":"codeVoice","code":"$zoomLevel"},{"type":"text","text":" variable and\/or"},{"type":"text","text":" "},{"type":"text","text":"feature attributes"}]}],"kind":"content"}],"metadata":{"role":"symbol","navigatorTitle":[{"kind":"identifier","text":"textVariableAnchorOffset"}],"modules":[{"name":"MapLibre"}],"title":"textVariableAnchorOffset","roleHeading":"Instance Property","externalID":"c:objc(cs)MLNSymbolStyleLayer(py)textVariableAnchorOffset","fragments":[{"kind":"identifier","text":"textVariableAnchorOffset"}],"symbolKind":"property"},"kind":"symbol","sections":[],"schemaVersion":{"patch":0,"major":0,"minor":3},"identifier":{"interfaceLanguage":"occ","url":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNSymbolStyleLayer\/textVariableAnchorOffset"},"abstract":[{"text":"To increase the chance of placing high-priority labels on the map, you can","type":"text"},{"type":"text","text":" "},{"type":"text","text":"provide an array of "},{"type":"codeVoice","code":"textAnchor"},{"text":" locations, each paired with an offset value.","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"The renderer will attempt to place the label at each location, in order, before"},{"type":"text","text":" "},{"text":"moving on to the next location+offset. Use ","type":"text"},{"type":"codeVoice","code":"textJustify: auto"},{"type":"text","text":" to choose"},{"type":"text","text":" "},{"type":"text","text":"justification based on anchor position."}],"variants":[{"paths":["\/documentation\/maplibre\/mlnsymbolstylelayer\/textvariableanchoroffset"],"traits":[{"interfaceLanguage":"occ"}]}],"references":{"doc://org.swift.MyProject/documentation/MapLibre/MLNSymbolStyleLayer":{"abstract":[{"text":"An ","type":"text"},{"type":"reference","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNSymbolStyleLayer","isActive":true},{"type":"text","tex