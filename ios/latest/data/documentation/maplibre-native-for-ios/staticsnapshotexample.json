{"hierarchy":{"paths":[["doc:\/\/org.swift.MyProject\/documentation\/MapLibre"]]},"seeAlsoSections":[{"identifiers":["doc:\/\/org.swift.MyProject\/documentation\/MapLibre-Native-for-iOS\/LocationPrivacyExample"],"generated":true,"title":"Features"}],"variants":[{"traits":[{"interfaceLanguage":"occ"}],"paths":["\/documentation\/maplibre-native-for-ios\/staticsnapshotexample"]}],"metadata":{"title":"Making Snapshots","roleHeading":"Article","modules":[{"name":"MapLibre"}],"role":"article"},"identifier":{"url":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre-Native-for-iOS\/StaticSnapshotExample","interfaceLanguage":"occ"},"kind":"article","schemaVersion":{"major":0,"minor":3,"patch":0},"sections":[],"abstract":[{"text":"Use ","type":"text"},{"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshotter","type":"reference","isActive":true},{"text":" to create snapshots of the map.","type":"text"}],"primaryContentSections":[{"kind":"content","content":[{"style":"note","name":"Note","type":"aside","content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"This example uses UIKit."}]}]},{"type":"paragraph","inlineContent":[{"text":"This example demonstrates how snapshots can be made of the map. The result is an ","type":"text"},{"type":"codeVoice","code":"UIImage"},{"text":" that you can let the user save to their camera roll or share with a friend. In this demo, the resulting image is shown back with an ","type":"text"},{"code":"UIImageView","type":"codeVoice"},{"type":"text","text":". Attribution is read from the sources and added to the snapshot (when applicable). By default a MapLibre logo is included on the image, but it is not required to show it. You can use "},{"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshotOptions\/showsLogo","isActive":true,"type":"reference"},{"type":"text","text":" to configure whether to include the logo. Check with your tile provider if you need to show their logo."}]},{"code":["class StaticSnapshotExample: UIViewController, MLNMapViewDelegate {","    var mapView: MLNMapView!","    var button: UIButton!","    var imageView: UIImageView!","","    override func viewDidLoad() {","        super.viewDidLoad()","","        mapView = MLNMapView(frame: CGRect(x: 0, y: 0, width: view.bounds.width, height: view.bounds.height \/ 2), styleURL: AMERICANA_STYLE)","        mapView.autoresizingMask = [.flexibleHeight, .flexibleWidth]","","        \/\/ Center map on the Giza Pyramid Complex in Egypt.","        let center = CLLocationCoordinate2D(latitude: 29.9773, longitude: 31.1325)","        mapView.setCenter(center, zoomLevel: 14, animated: false)","        view.addSubview(mapView)","","        \/\/ Create a button to take a map snapshot.","        button = UIButton(frame: CGRect(x: mapView.bounds.width \/ 2 - 40, y: mapView.bounds.height - 40, width: 80, height: 30))","        button.layer.cornerRadius = 15","        button.backgroundColor = UIColor(red: 0.96, green: 0.65, blue: 0.14, alpha: 1.0)","        button.setImage(UIImage(named: \"camera\"), for: .normal)","        button.addTarget(self, action: #selector(createSnapshot), for: .touchUpInside)","        view.addSubview(button)","","        \/\/ Create a UIImageView that will store the map snapshot.","        imageView = UIImageView(frame: CGRect(x: 0, y: view.bounds.height \/ 2, width: view.bounds.width, height: view.bounds.height \/ 2))","        imageView.backgroundColor = .black","        imageView.autoresizingMask = [.flexibleWidth, .flexibleHeight]","        view.addSubview(imageView)","    }","","    @objc func createSnapshot() {","        \/\/ Use the map's style, camera, size, and zoom level to set the snapshot's options.","        let options = MLNMapSnapshotOptions(styleURL: mapView.styleURL, camera: mapView.camera, size: mapView.bounds.size)","        options.zoomLevel = mapView.zoomLevel","","        \/\/ Add an activity indicator to show that the snapshot is loading.","        let indicator = UIActivityIndicatorView(frame: CGRect(x: imageView.center.x - 30, y: imageView.center.y - 30, width: 60, height: 60))","        view.addSubview(indicator)","        indicator.startAnimating()","","        \/\/ Create the map snapshot.","        let snapshotter: MLNMapSnapshotter? = MLNMapSnapshotter(options: options)","        snapshotter?.start { snapshot, error in","            if error != nil {","                print(\"Unable to create a map snapshot.\")","            } else if let snapshot {","                \/\/ Add the map snapshot's image to the image view.","                indicator.stopAnimating()","                self.imageView.image = snapshot.image","            }","        }","    }","}"],"type":"codeListing","syntax":"swift"}]}],"references":{"doc://org.swift.MyProject/documentation/MapLibre/MLNMapSnapshotOptions":{"abstract":[{"text":"The options to use when creating images with the ","type":"text"},{"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshotter","type":"reference","isActive":true},{"text":".","type":"text"}],"fragments":[{"text":"MLNMapSnapshotOptions","kind":"identifier"}],"type":"topic","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshotOptions","kind":"symbol","url":"\/documentation\/maplibre\/mlnmapsnapshotoptions","role":"symbol","title":"MLNMapSnapshotOptions"},"doc://org.swift.MyProject/documentation/MapLibre/MLNMapSnapshotterDelegate":{"title":"MLNMapSnapshotterDelegate","kind":"symbol","abstract":[{"type":"text","text":"Optional methods about significant events when creating a snapshot using an"},{"text":" ","type":"text"},{"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshotter","type":"reference","isActive":true},{"text":" object.","type":"text"}],"url":"\/documentation\/maplibre\/mlnmapsnapshotterdelegate","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshotterDelegate","role":"symbol","type":"topic","fragments":[{"text":"MLNMapSnapshotterDelegate","kind":"identifier"}]},"doc://org.swift.MyProject/documentation/MapLibre/MLNMapSnapshotter":{"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshotter","abstract":[{"text":"An ","type":"text"},{"type":"reference","isActive":true,"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshotter"},{"text":" generates static raster images of the map. Each snapshot","type":"text"},{"type":"text","text":" "},{"type":"text","text":"image depicts a portion of a map defined by an "},{"isActive":true,"type":"reference","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshotOptions"},{"type":"text","text":" object"},{"text":" ","type":"text"},{"type":"text","text":"you provide. The snapshotter generates an "},{"isActive":true,"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshot","type":"reference"},{"type":"text","text":" object"},{"text":" ","type":"text"},{"type":"text","text":"asynchronously, calling "},{"type":"reference","isActive":true,"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshotterDelegate"},{"type":"text","text":" methods if defined, then"},{"text":" ","type":"text"},{"type":"text","text":"passing it into a completion handler once tiles and other resources needed for"},{"text":" ","type":"text"},{"text":"the snapshot are finished loading.","type":"text"}],"fragments":[{"text":"MLNMapSnapshotter","kind":"identifier"}],"role":"symbol","title":"MLNMapSnapshotter","kind":"symbol","url":"\/documentation\/maplibre\/mlnmapsnapshotter","type":"topic"},"doc://org.swift.MyProject/documentation/MapLibre/MLNMapSnapshot":{"type":"topic","kind":"symbol","title":"MLNMapSnapshot","role":"symbol","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshot","url":"\/documentation\/maplibre\/mlnmapsnapshot","fragments":[{"kind":"identifier","text":"MLNMapSnapshot"}],"abstract":[{"text":"An image generated by a snapshotter object.","type":"text"}]},"doc://org.swift.MyProject/documentation/MapLibre/MLNLocationManager":{"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNLocationManager","abstract":[{"text":"The ","type":"text"},{"type":"reference","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNLocationManager","isActive":true},{"type":"text","text":" protocol defines a set of methods that a class must"},{"type":"text","text":" "},{"text":"implement in order to serve as the location manager of an ","type":"text"},{"isActive":true,"type":"reference","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapView"},{"type":"text","text":". A location"},{"type":"text","text":" "},{"type":"text","text":"manager is responsible for notifying the map view about location-related events,"},{"type":"text","text":" "},{"type":"text","text":"such as a change in the user’s location. This protocol is similar to the"},{"text":" ","type":"text"},{"type":"text","text":"Core Location framework’s "},{"code":"CLLocationManager","type":"codeVoice"},{"type":"text","text":" class, but your implementation"},{"type":"text","text":" "},{"type":"text","text":"does not need to be based on "},{"type":"codeVoice","code":"CLLocationManager"},{"text":".","type":"text"}],"type":"topic","title":"MLNLocationManager","fragments":[{"text":"MLNLocationManager","kind":"identifier"}],"url":"\/documentation\/maplibre\/mlnlocationmanager","kind":"symbol","role":"symbol"},"doc://org.swift.MyProject/documentation/MapLibre/MLNMapSnapshotOptions/showsLogo":{"fragments":[{"text":"showsLogo","kind":"identifier"}],"kind":"symbol","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshotOptions\/showsLogo","title":"showsLogo","url":"\/documentation\/maplibre\/mlnmapsnapshotoptions\/showslogo","type":"topic","role":"symbol","abstract":[{"type":"text","text":":nodoc:"},{"type":"text","text":