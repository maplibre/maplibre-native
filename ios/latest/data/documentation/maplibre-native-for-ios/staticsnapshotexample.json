{"seeAlsoSections":[{"identifiers":["doc:\/\/org.swift.MyProject\/documentation\/MapLibre-Native-for-iOS\/LocationPrivacyExample"],"title":"Features","generated":true}],"variants":[{"traits":[{"interfaceLanguage":"occ"}],"paths":["\/documentation\/maplibre-native-for-ios\/staticsnapshotexample"]}],"kind":"article","schemaVersion":{"major":0,"minor":3,"patch":0},"identifier":{"url":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre-Native-for-iOS\/StaticSnapshotExample","interfaceLanguage":"occ"},"metadata":{"title":"Making Snapshots","roleHeading":"Article","role":"article","modules":[{"name":"MapLibre"}]},"primaryContentSections":[{"kind":"content","content":[{"type":"aside","style":"note","content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"This example uses UIKit."}]}],"name":"Note"},{"type":"paragraph","inlineContent":[{"text":"This example demonstrates how snapshots can be made of the map. The result is an ","type":"text"},{"code":"UIImage","type":"codeVoice"},{"text":" that you can let the user save to their camera roll or share with a friend. In this demo, the resulting image is shown back with an ","type":"text"},{"type":"codeVoice","code":"UIImageView"},{"type":"text","text":". Attribution is read from the sources and added to the snapshot (when applicable). By default a MapLibre logo is included on the image, but it is not required to show it. You can use "},{"isActive":true,"type":"reference","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshotOptions\/showsLogo"},{"text":" to configure whether to include the logo. Check with your tile provider if you need to show their logo.","type":"text"}]},{"code":["class StaticSnapshotExample: UIViewController, MLNMapViewDelegate {","    var mapView: MLNMapView!","    var button: UIButton!","    var imageView: UIImageView!","","    override func viewDidLoad() {","        super.viewDidLoad()","","        mapView = MLNMapView(frame: CGRect(x: 0, y: 0, width: view.bounds.width, height: view.bounds.height \/ 2), styleURL: AMERICANA_STYLE)","        mapView.autoresizingMask = [.flexibleHeight, .flexibleWidth]","","        \/\/ Center map on the Giza Pyramid Complex in Egypt.","        let center = CLLocationCoordinate2D(latitude: 29.9773, longitude: 31.1325)","        mapView.setCenter(center, zoomLevel: 14, animated: false)","        view.addSubview(mapView)","","        \/\/ Create a button to take a map snapshot.","        button = UIButton(frame: CGRect(x: mapView.bounds.width \/ 2 - 40, y: mapView.bounds.height - 40, width: 80, height: 30))","        button.layer.cornerRadius = 15","        button.backgroundColor = UIColor(red: 0.96, green: 0.65, blue: 0.14, alpha: 1.0)","        button.setImage(UIImage(named: \"camera\"), for: .normal)","        button.addTarget(self, action: #selector(createSnapshot), for: .touchUpInside)","        view.addSubview(button)","","        \/\/ Create a UIImageView that will store the map snapshot.","        imageView = UIImageView(frame: CGRect(x: 0, y: view.bounds.height \/ 2, width: view.bounds.width, height: view.bounds.height \/ 2))","        imageView.backgroundColor = .black","        imageView.autoresizingMask = [.flexibleWidth, .flexibleHeight]","        view.addSubview(imageView)","    }","","    @objc func createSnapshot() {","        \/\/ Use the map's style, camera, size, and zoom level to set the snapshot's options.","        let options = MLNMapSnapshotOptions(styleURL: mapView.styleURL, camera: mapView.camera, size: mapView.bounds.size)","        options.zoomLevel = mapView.zoomLevel","","        \/\/ Add an activity indicator to show that the snapshot is loading.","        let indicator = UIActivityIndicatorView(frame: CGRect(x: imageView.center.x - 30, y: imageView.center.y - 30, width: 60, height: 60))","        view.addSubview(indicator)","        indicator.startAnimating()","","        \/\/ Create the map snapshot.","        let snapshotter: MLNMapSnapshotter? = MLNMapSnapshotter(options: options)","        snapshotter?.start { snapshot, error in","            if error != nil {","                print(\"Unable to create a map snapshot.\")","            } else if let snapshot {","                \/\/ Add the map snapshot's image to the image view.","                indicator.stopAnimating()","                self.imageView.image = snapshot.image","            }","        }","    }","}"],"syntax":"swift","type":"codeListing"}]}],"hierarchy":{"paths":[["doc:\/\/org.swift.MyProject\/documentation\/MapLibre"]]},"sections":[],"abstract":[{"type":"text","text":"Use "},{"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshotter","type":"reference","isActive":true},{"type":"text","text":" to create snapshots of the map."}],"references":{"doc://org.swift.MyProject/documentation/MapLibre":{"abstract":[{"text":"Powerful, free and open-source mapping toolkit with full control over data sources and styling.","type":"text"}],"kind":"symbol","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre","role":"collection","title":"MapLibre","type":"topic","url":"\/documentation\/maplibre"},"doc://org.swift.MyProject/documentation/MapLibre/MLNMapSnapshotter":{"type":"topic","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshotter","url":"\/documentation\/maplibre\/mlnmapsnapshotter","fragments":[{"text":"MLNMapSnapshotter","kind":"identifier"}],"title":"MLNMapSnapshotter","kind":"symbol","abstract":[{"text":"An ","type":"text"},{"isActive":true,"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshotter","type":"reference"},{"type":"text","text":" generates static raster images of the map. Each snapshot"},{"text":" ","type":"text"},{"type":"text","text":"image depicts a portion of a map defined by an "},{"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshotOptions","type":"reference","isActive":true},{"text":" object","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"you provide. The snapshotter generates an "},{"isActive":true,"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshot","type":"reference"},{"text":" object","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"asynchronously, calling "},{"isActive":true,"type":"reference","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshotterDelegate"},{"text":" methods if defined, then","type":"text"},{"type":"text","text":" "},{"type":"text","text":"passing it into a completion handler once tiles and other resources needed for"},{"type":"text","text":" "},{"text":"the snapshot are finished loading.","type":"text"}],"role":"symbol"},"doc://org.swift.MyProject/documentation/MapLibre/MLNMapSnapshot":{"kind":"symbol","abstract":[{"type":"text","text":"An image generated by a snapshotter object."}],"fragments":[{"text":"MLNMapSnapshot","kind":"identifier"}],"role":"symbol","title":"MLNMapSnapshot","type":"topic","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshot","url":"\/documentation\/maplibre\/mlnmapsnapshot"},"doc://org.swift.MyProject/documentation/MapLibre/MLNMapSnapshotOptions/showsLogo":{"fragments":[{"text":"showsLogo","kind":"identifier"}],"title":"showsLogo","url":"\/documentation\/maplibre\/mlnmapsnapshotoptions\/showslogo","role":"symbol","kind":"symbol","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNMapSnapshotOptions\/showsLogo","abstract":[{"text":":nodoc:","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"Whether to include the MapLibre logo. Note this is not required."}],"type":"topic"},"doc://org.swift.MyProject/documentation/MapLibre-Native-for-iOS/LocationPrivacyExample":{"type":"topic","title":"User Location & Location Privacy","role":"article","url":"\/documentation\/maplibre-native-for-ios\/locationprivacyexample","abstract":[{"text":"Requesting precise location with ","type":"tex