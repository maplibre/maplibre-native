/documentation/MapLibre-Native-for-iOS/WebAPIDataExample":{"url":"\/documentation\/maplibre-native-for-ios\/webapidataexample","kind":"article","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre-Native-for-iOS\/WebAPIDataExample","type":"topic","role":"article","title":"Showing data from an API","abstract":[{"text":"Showing data from an API with custom styling and interaction","type":"text"}]},"doc://org.swift.MyProject/documentation/MapLibre/MLNLineStyleLayer":{"type":"topic","url":"\/documentation\/maplibre\/mlnlinestylelayer","role":"symbol","kind":"symbol","title":"MLNLineStyleLayer","fragments":[{"text":"MLNLineStyleLayer","kind":"identifier"}],"abstract":[{"type":"text","text":"An "},{"type":"reference","isActive":true,"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNLineStyleLayer"},{"type":"text","text":" is a style layer that renders one or more stroked"},{"type":"text","text":" "},{"type":"text","text":"polylines on the map."}],"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNLineStyleLayer"},"doc://org.swift.MyProject/documentation/MapLibre-Native-for-iOS/GeoJSON":{"kind":"article","role":"article","title":"Working with GeoJSON Data","type":"topic","abstract":[],"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre-Native-for-iOS\/GeoJSON","url":"\/documentation\/maplibre-native-for-ios\/geojson"}}}