/#step":{"titleInlineContent":[{"type":"text","text":"step"}],"url":"https:\/\/maplibre.org\/maplibre-style-spec\/expressions\/#step","type":"link","identifier":"https:\/\/maplibre.org\/maplibre-style-spec\/expressions\/#step","title":"step"},"DDSCircleLayerExample.png":{"variants":[{"url":"\/images\/org.swift.MyProject\/DDSCircleLayerExample@2x.png","traits":["2x","light"]}],"type":"image","alt":null,"identifier":"DDSCircleLayerExample.png"},"https://openmaptiles.org/schema/#poi":{"type":"link","identifier":"https:\/\/openmaptiles.org\/schema\/#poi","titleInlineContent":[{"type":"text","text":"POIs"}],"title":"POIs","url":"https:\/\/openmaptiles.org\/schema\/#poi"},"doc://org.swift.MyProject/documentation/MapLibre-Native-for-iOS/GeoJSON":{"identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre-Native-for-iOS\/GeoJSON","url":"\/documentation\/maplibre-native-for-ios\/geojson","abstract":[],"role":"article","type":"topic","kind":"article","title":"Working with GeoJSON Data"},"doc://org.swift.MyProject/documentation/MapLibre-Native-for-iOS/AnimatedLineExample":{"abstract":[{"type":"text","text":"Add an animated line to a map"}],"url":"\/documentation\/maplibre-native-for-ios\/animatedlineexample","type":"topic","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre-Native-for-iOS\/AnimatedLineExample","role":"article","title":"Animated Line","kind":"article"}}}