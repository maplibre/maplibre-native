te = NSPredicate(format: \"class == %@\", \"shop\")","","        \/\/ Style the circle layer color based on the rank","        layer.circleColor = NSExpression(mglJSONObject: [\"step\", [\"get\", \"rank\"], 0, \"red\", 10, \"green\", 20, \"blue\", 30, \"purple\", 40, \"yellow\"] as [Any])","        layer.circleRadius = NSExpression(forConstantValue: 3)","","        style.addLayer(layer)","    }","}"]},{"inlineContent":[{"type":"image","identifier":"DDSCircleLayerExample.png"}],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"Map data from OpenStreetMap. Style uses OpenMapTiles."}],"type":"paragraph"}]}],"references":{"doc://org.swift.MyProject/documentation/MapLibre-Native-for-iOS/GeoJSON":{"url":"\/documentation\/maplibre-native-for-ios\/geojson","role":"article","type":"topic","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre-Native-for-iOS\/GeoJSON","abstract":[],"title":"Working with GeoJSON Data","kind":"article"},"doc://org.swift.MyProject/documentation/MapLibre-Native-for-iOS/POIAlongRouteExample":{"title":"POI Along a Route","url":"\/documentation\/maplibre-native-for-ios\/poialongrouteexample","role":"article","kind":"article","type":"topic","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre-Native-for-iOS\/POIAlongRouteExample","abstract":[{"text":"Use an ","type":"text"},{"type":"codeVoice","code":"NSPredicate"},{"text":" to show POI and road labels along a route.","type":"text"}]},"DDSCircleLayerExample.png":{"variants":[{"traits":["2x","light"],"url":"\/images\/DDSCircleLayerExample@2x.png"}],"type":"image","identifier":"DDSCircleLayerExample.png","alt":null},"https://openmaptiles.org/schema/#poi":{"type":"link","title":"POIs","identifier":"https:\/\/openmaptiles.org\/schema\/#poi","titleInlineContent":[{"type":"text","text":"POIs"}],"url":"https:\/\/openmaptiles.org\/schema\/#poi"},"https://github.com/maplibre/demotiles/tree/gh-pages/tiles-omt":{"url":"https:\/\/github.com\/maplibre\/demotiles\/tree\/gh-page