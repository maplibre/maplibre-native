er = \"poi\"","        layer.predicate = NSPredicate(format: \"class == %@\", \"shop\")","","        \/\/ Style the circle layer color based on the rank","        layer.circleColor = NSExpression(mglJSONObject: [\"step\", [\"get\", \"rank\"], 0, \"red\", 10, \"green\", 20, \"blue\", 30, \"purple\", 40, \"yellow\"] as [Any])","        layer.circleRadius = NSExpression(forConstantValue: 3)","","        style.addLayer(layer)","    }","}"]},{"type":"paragraph","inlineContent":[{"identifier":"DDSCircleLayerExample.png","type":"image"}]},{"type":"paragraph","inlineContent":[{"text":"Map data from OpenStreetMap. Style uses OpenMapTiles.","type":"text"}]}]}],"references":{"doc://org.swift.MyProject/documentation/MapLibre-Native-for-iOS/GeoJSON":{"type":"topic","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre-Native-for-iOS\/GeoJSON","kind":"article","url":"\/documentation\/maplibre-native-for-ios\/geojson","role":"article","abstract":[],"title":"Working with GeoJSON Data"},"doc://org.swift.MyProject/documentation/MapLibre-Native-for-iOS/WebAPIDataExample":{"type":"topic","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre-Native-for-iOS\/WebAPIDataExample","kind":"article","url":"\/documentation\/maplibre-native-for-ios\/webapidataexample","role":"article","abstract":[{"type":"text","text":"Showing data from an API with custom styling and interaction"}],"title":"Showing data from an API"},"doc://org.swift.MyProject/documentation/MapLibre-Native-for-iOS/AnimatedLineExample":{"type":"topic","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre-Native-for-iOS\/AnimatedLineExample","kind":"article","url":"\/documentation\/maplibre-native-for-ios\/animatedlineexample","role":"article","abstract":[{"type":"text","text":"Add an animated line to a map"}],"title":"Animated Line"},"https://openmaptiles.org/schema/#poi":{"titleInlineContent":[{"text":"POIs","type":"text"}],"type":"link","url":"https:\/\/openmaptiles.org\/schema\/#poi","tit