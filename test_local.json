{
  "version": 8,
  "name": "Local Test Style",
  "sources": {
    "test": {
      "type": "geojson",
      "data": {
        "type": "FeatureCollection",
        "features": [
          {
            "type": "Feature",
            "properties": {"name": "Square"},
            "geometry": {
              "type": "Polygon",
              "coordinates": [
                [
                  [-50, -50],
                  [50, -50],
                  [50, 50],
                  [-50, 50],
                  [-50, -50]
                ]
              ]
            }
          },
          {
            "type": "Feature",
            "properties": {"name": "Line"},
            "geometry": {
              "type": "LineString",
              "coordinates": [
                [-100, 0],
                [-50, 25],
                [0, 0],
                [50, -25],
                [100, 0]
              ]
            }
          },
          {
            "type": "Feature",
            "properties": {"name": "Triangle"},
            "geometry": {
              "type": "Polygon",
              "coordinates": [
                [
                  [0, 60],
                  [40, 100],
                  [-40, 100],
                  [0, 60]
                ]
              ]
            }
          }
        ]
      }
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f0f0f0"
      }
    },
    {
      "id": "polygons",
      "type": "fill",
      "source": "test",
      "filter": ["==", ["geometry-type"], "Polygon"],
      "paint": {
        "fill-color": "#3887be",
        "fill-opacity": 0.7
      }
    },
    {
      "id": "polygon-outlines",
      "type": "line",
      "source": "test",
      "filter": ["==", ["geometry-type"], "Polygon"],
      "paint": {
        "line-color": "#1a5490",
        "line-width": 2
      }
    },
    {
      "id": "lines",
      "type": "line",
      "source": "test",
      "filter": ["==", ["geometry-type"], "LineString"],
      "paint": {
        "line-color": "#ff0000",
        "line-width": 4
      }
    }
  ]
}
