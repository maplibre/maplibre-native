{
  "version": 8,
  "name": "Local Test Style",
  "center": [0, 0],
  "zoom": 1,
  "sources": {
    "test": {
      "type": "geojson",
      "data": {
        "type": "FeatureCollection",
        "features": [
          {
            "type": "Feature",
            "properties": {"name": "Square"},
            "geometry": {
              "type": "Polygon",
              "coordinates": [
                [
                  [-10, -10],
                  [10, -10],
                  [10, 10],
                  [-10, 10],
                  [-10, -10]
                ]
              ]
            }
          },
          {
            "type": "Feature",
            "properties": {"name": "Line"},
            "geometry": {
              "type": "LineString",
              "coordinates": [
                [-20, 0],
                [-10, 5],
                [0, 0],
                [10, -5],
                [20, 0]
              ]
            }
          }
        ]
      }
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#e0e0e0"
      }
    },
    {
      "id": "polygons",
      "type": "fill",
      "source": "test",
      "filter": ["==", ["geometry-type"], "Polygon"],
      "paint": {
        "fill-color": "#ff0000",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "lines",
      "type": "line",
      "source": "test",
      "filter": ["==", ["geometry-type"], "LineString"],
      "paint": {
        "line-color": "#0000ff",
        "line-width": 3
      }
    }
  ]
}
